include _layout.jade
    block title 
        title Đăng ký
    block content
        .container-login100(style='background-image: url(/images/bg-01.jpg);')
            center
                img#logo(src="/images/pokebiz.png", alt="Logo PokeBiz", width='90%')
                .mess(style='padding-top:55px;')
                 #message
                   if message
                    h3(style='color: #fff;font-weight: bold;') #{message}
                //-     a.login100-form-btn(href="http://localhost:3000/user/login",style="width:50%;margin-bottom:20px;")
            .wrap-login100.p-l-55.p-r-55.p-t-80.p-b-30
                form.login100-form.validate-form(method='post' action="/signup")
                    span.login100-form-title.p-b-37 Đăng ký
                    .wrap-input100.wrap-input100.validate-input.m-b-20(data-validate="Vui lòng nhập username")
                        input.input100(type="text",name="username",placeholder="Nhập username")
                        span.focus-input100
                    .wrap-input100.wrap-input100.validate-input.m-b-20(data-validate="Vui lòng email")
                        input.input100(type="text",name="email",placeholder="Nhập email")
                        span.focus-input100
                    .wrap-input100.wrap-input100.validate-input.m-b-20(data-validate="Vui lòng nhập lại mật khẩu")
                        input.input100(type="password",name="password",placeholder="Nhập lại mật khẩu")
                        span.focus-input100
                    div
                        .form-check-inline
                        label.form-check-label
                            input.form-check-input(type='radio', name='sex',value="0")
                            | Female
                        .form-check-inline
                        label.form-check-label
                            input.form-check-input(type='radio', name='sex',checked='',value="1")
                            | Male
                    .container-login100-form-btn
                        button.login100-form-btn(type="submit") Đăng ký
                 