extends ./header.jade
block title
  title MANAGER POKEMON
block content
  .container
    .table-wrapper
      .table-title
        .row
          .col-sm-8
            input.form-control(id='tranght',type='hidden')
            h2
              | Pokemon 
              b MANAGER
          .col-sm-6
            a.btn.btn-success(href='#addEmployeeModal', data-toggle='modal')
              i.material-icons 
              span Add New Pokemon
          .col-sm-4
            .search-box
              i.material-icons 
              input.form-control(id='search',type='text', placeholder='Search…')
      table#table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th namePokemon
            th imagePokemon
            th CP 
            th typePokemons
            th Custom
        tbody
      .clearfix
        ul.pagination#page
          li.page-item.disabled
            a(id='phantrang1' ) Previous
          if Pokemon
            -for(var i=0;i<Pokemon/10;i++)
              li.page-item
                a.page-link( rel=i id='phantrang')=i+1
          li.page-item
            a.page-link(id='phantrang2') Next
  #editEmployeeModal.modal.fade
    .modal-dialog
      .modal-content
        form(method='post',action='/admin/pokemon/edit',enctype='multipart/form-data')
          .modal-header
            h4.modal-title Edit User
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          .modal-body
            .form-group
              label namePokemon
              input.form-control(id='namePokemon',name='namePokemon',type='text', required='')
            input.form-control(id='id',name='id',type='hidden', required='')
            .form-group
              label imagePokemon
              input.form-control(id='image',name='anh',type='file', required='', onchange="change(this)")
            .figure.showimg
              button(id='x' type='button') x
              <img id='blah' src="" class="img-rounded" alt="" width="300" height="236"> 
            .form-group
              label CP
              input.form-control(id='cp',name='CP',required='',type='text')
            if typePoke
                .form-group
                  label typePokemons
                  select.form-control#mySelect(name='typePokemons')
                     each iteam in typePoke
                        option(id='ss',value=iteam._id)=iteam.nameType
            .modal-footer
            input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
            input.btn.btn-info(id='save', type='submit', value='Save')
  #addEmployeeModal.modal.fade
    .modal-dialog
      .modal-content
        form(method='post',action='/admin/pokemon/save',enctype='multipart/form-data')
          .modal-header
            h4.modal-title Add Pokemon
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          .modal-body
            .form-group
              label namePokemon
              input.form-control(id='namePokemon',name='namePokemon',type='text', required='')
            input.form-control(id='id',name='id',type='hidden', required='')
            .form-group
              label imagePokemon
              input.form-control(id='image',name='anh',type='file', required='', onchange="change1(this)")
            .figure.showimg1
              button(id='x1' type='button') x
              <img id='blah1' src="" class="img-rounded" alt="" width="300" height="236"> 
            .form-group
              label CP
              input.form-control(id='cp',name='CP',required='',type='text')
            if typePoke
                .form-group
                  label typePokemons
                  select.form-control#mySelect(name='typePokemons')
                     each iteam in typePoke
                        option(id='ss',value=iteam._id)=iteam.nameType
            .modal-footer
              input.btn.btn-default(type='button', data-dismiss='modal', value='Cancel')
              input.btn.btn-success(type='submit', value='Add')

  script(type='text/javascript' src='/javascripts/pokemon.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js')
