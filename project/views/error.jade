doctype html
html(lang='en')
  head
    style.
      body{
            margin: 0;
        height: 100vh;
        background: -webkit-gradient(linear, left top, left bottom, from(rgba(22, 22, 22, .1)), color-stop(75%, rgba(22, 22, 22, .5)), to(#161616)), url(../../images/bgpoke2.jpg);
        background: linear-gradient(to bottom, rgba(22, 22, 22, .1) 0, rgba(22, 22, 22, .5) 75%, #161616 100%), url(../../images/bgpoke2.jpg);
        background-repeat: no-repeat;
        background-size: cover;
      }
      a{
            color: #fff;
        text-decoration: none;
        font-size: 29px;
        border: 1px solid;
        padding: 10px 20px;
        border-radius: 7px;
      }
      .abc{
        position: absolute;
        transform: translate(-50%,-50%);
        left: 50%;
        top: 20%;
        text-align: center;
        color: #fff;
        padding: 10px 50px;
      }
