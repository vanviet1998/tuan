include _layout.jade
    block title
        Title Đăng nhập
    block content
        .container-login100(style='background-image: url(/images/bg-01.jpg);')
            center
                img#logo(src="/images/pokebiz.png", alt="Logo PokeBiz", width='90%')
                #message
                   if message
                    h3(style='color: #fff;font-weight: bold;') #{message}
            .wrap-login100.p-l-55.p-r-55.p-t-80.p-b-30
                form.login100-form.validate-form(method='POST' action="/login")
                    span.login100-form-title.p-b-37 Đăng nhập
                    .wrap-input100.wrap-input100.validate-input.m-b-20(data-validate="Vui lòng nhập username hoặc email")
                        input.input100(type="text",name="username",placeholder="Nhập username hoặc email")
                        span.focus-input100
                    .wrap-input100.wrap-input100.validate-input.m-b-20(data-validate="Vui lòng nhập mật khẩu")
                        input.input100(type="password",name="password",placeholder="Nhập mật khẩu")
                        span.focus-input100
                    .container-login100-form-btn
                        button.login100-form-btn(type="submit") Đăng nhập
                h4 OR
                .container-login100-form-btn(style="display: grid;")
                    a(href="signup") Đăng ký
                        a(href="signinpokestop") Đăng ký PokeStop